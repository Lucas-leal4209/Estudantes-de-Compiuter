// Online C compiler to run C program online
#include <stdio.h>
#include <time.h>

#define BRT -3

int main() {
    struct tm *data_atual;
    time_t segundos;
    time(&segundos);
    
    data_atual = localtime(&segundos);
    printf("Dia: %d/",data_atual->tm_mday);
    printf("%d/",data_atual->tm_mon+1);
    printf("%d\n\n",data_atual->tm_year+1900);
    printf("Hora: %d:",data_atual->tm_hour+BRT);
    printf("%d:",data_atual->tm_min);
    printf("%d:\n",data_atual->tm_sec);

    return 0;
}
