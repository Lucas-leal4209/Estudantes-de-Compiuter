#include <stdio.h>
#include <time.h>

#define BRT -3

int main() {
    struct tm *tempo;
    time_t segundos;
    time(&segundos);
    
    tempo = localtime(&segundos);
    printf("tempo: %d/%d/%d\n",tempo->tm_mday,tempo->tm_mon+1,tempo->tm_year+1900);
    printf("Hora: %d:%d:%d\n",tempo->tm_hour+BRT,tempo->tm_min,tempo->tm_sec);

    return 0;
}
